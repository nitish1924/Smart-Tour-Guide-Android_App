            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="400dp"-->
            <!--android:textColor="@color/fontcolor"-->
            <!--android:textSize="15dp" />-->


        <!--<TextView-->
            <!--android:id="@+id/nameText"-->
