<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/homeactivitytoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fontcolor"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/bgcolor">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/homeactivitytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_view_comfy_black_24dp"
            android:drawablePadding="12dp"
            android:gravity="center_horizontal"
            android:hint="I'm Looking for..."
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/fontcolor"
            android:textColorHint="@color/temp"
            android:textSize="22dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db" />

        <Button
            android:id="@+id/Top_picks"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_toppicksblack"
            android:padding="16dp"
            android:text="Top Picks"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/food"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_foodblack"
            android:padding="16dp"
            android:text="            Food"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cafe"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_cafeblack"
            android:padding="16dp"
            android:text="                  Cafe"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Night_Life"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_nightlifeblack"
            android:padding="16dp"
            android:text="Night Life"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shopping"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_shoppingblack"
            android:padding="16dp"
            android:text="  Shopping"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/movies"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableStart="@drawable/ic_moviesblack"
            android:padding="16dp"
            android:text="      Movies"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mylocationbtn"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:background="@drawable/mybutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:padding="16dp"
            android:text="My Location..."
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="17dp"
            android:textStyle="bold" />

