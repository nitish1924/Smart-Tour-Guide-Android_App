<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Now"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/fontcolor"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/hometemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO weather Data"
            android:textColor="@color/fontcolor"
            android:textSize="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/homedesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO weather Data"
            android:textSize="15dp"
            android:textColor="@color/fontcolor"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <EditText
                android:id="@+id/homeactivitytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_view_comfy_black_24dp"
                android:drawablePadding="20dp"

                android:hint="I'm Looking for..."
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/fontcolor"
                android:textColorHint="@color/temp"
                android:textSize="22dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/homeSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:drawableLeft="@drawable/ic_search_"
                android:background="@drawable/roundbutton"
                android:padding="16dp"
                android:textColor="@color/fontcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:text="Search"/>


        <Button
            android:id="@+id/BGrocery"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_toppicks"
            android:padding="16dp"
            android:text="      Grocery"
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Bfood"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_food"
            android:padding="16dp"
            android:text="            Food"
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Bcafe"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_cafe"
            android:padding="16dp"
            android:text="                  Cafe"
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BNight_Life"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_nightlife"
            android:padding="16dp"
            android:text="Night Life"
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Bshopping"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_shopping"
            android:padding="16dp"
            android:text="  Shopping"
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Bmovies"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableStart="@drawable/ic_movies"
            android:padding="16dp"
            android:text="      Movies"
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mylocationbtn"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:background="@drawable/roundbutton"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:padding="16dp"
            android:text="My Location..."
            android:textAllCaps="false"
            android:textColor="@color/fontcolor"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>